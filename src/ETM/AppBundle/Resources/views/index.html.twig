<!DOCTYPE html>
<html>
    <head>
        <title>ETM System Symfony example</title>
{% stylesheets
    '@AppBundle/Resources/public/css/bootstrap.css'
    '@AppBundle/Resources/public/jquery-ui/jquery-ui.css'
    '@AppBundle/Resources/public/css/style.css'
    filter='cssrewrite'
%}
        <link href="{{ asset_url }}" rel="stylesheet">
{% endstylesheets %}
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 form-container">
                    <form>
                        <div class="form-group" id="originLocationGroup">
                            <label for="originLocation">Origin location</label>
                            <input class="form-control" id="originLocation">
                        </div>
                        <div class="form-group" id="destinationLocationGroup">
                            <label for="destinationLocation">Destination location</label>
                            <input class="form-control" id="destinationLocation">
                        </div>
                        <div class="form-group" id="departureDateGroup">
                            <label for="departureDate">Departure date</label>
                            <input type="text" class="form-control" id="departureDate">
                        </div>
                        <div class="form-group" id="passengerTypeGroup">
                            <label for="passengerType">Passenger type</label>
                            <select class="form-control" id="passengerType"></select>
                        </div>
                        <div class="form-group" id="passengerQuantityGroup">
                            <label for="passengerQuantity">Passenger quantity</label>
                            <input type="text" class="form-control" id="passengerQuantity">
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-block btn-primary" id="doAirFareRQ">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div> <!-- /container -->
{% javascripts
    '@AppBundle/Resources/public/js/jquery-3.2.1.min.js'
    '@AppBundle/Resources/public/jquery-ui/jquery-ui.min.js'
    '@AppBundle/Resources/public/js/bootstrap.min.js'
    '@AppBundle/Resources/public/js/script.js'
%}
        <script src="{{ asset_url }}"></script>
{% endjavascripts %}
    </body>
</html>