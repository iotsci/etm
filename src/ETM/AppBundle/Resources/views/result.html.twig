<!DOCTYPE html>
<html>
<head>
    <title>ETM System Symfony search results example</title>
    {% stylesheets
    '@AppBundle/Resources/public/css/bootstrap.css'
    '@AppBundle/Resources/public/jquery-ui/jquery-ui.css'
    '@AppBundle/Resources/public/css/result.css'
    filter='cssrewrite'
    %}
    <link href="{{ asset_url }}" rel="stylesheet">
    {% endstylesheets %}
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-12 result-container">
            {% for result in results %}
            <table class="table table-bordered">
                <tr>
                    <th colspan="9">Fare</th>
                    <th>Currency</th>
                    <th>Total</th>
                    <th>Direction</th>
                    <th>Duration</th>
                </tr>
                <tr>
                    <th colspan="3">Adult</th>
                    <th colspan="3">Child</th>
                    <th colspan="3">Infant</th>
                    <td>
                        {{ result.Fares.Currency }}
                    </td>
                    <td>
                        {{ result.Fares.Total }}
                    </td>
                    <td>{{ result.Segments.Direction }}</td>
                    <td>{{ result.Segments.Duration }}</td>
                </tr>
                <tr>
                    <th>Fare</th>
                    <th>Fee</th>
                    <th>Tax</th>
                    <th>Fare</th>
                    <th>Fee</th>
                    <th>Tax</th>
                    <th>Fare</th>
                    <th>Fee</th>
                    <th>Tax</th>
                    <th colspan="4" rowspan="2"></th>
                </tr>
                <tr>
                    <td>{{ result.Fares.AdultFare }}</td>
                    <td>{{ result.Fares.AdultFee }}</td>
                    <td>{{ result.Fares.AdultTax }}</td>
                    <td>{{ result.Fares.ChildFare }}</td>
                    <td>{{ result.Fares.ChildFee }}</td>
                    <td>{{ result.Fares.ChildTax }}</td>
                    <td>{{ result.Fares.InfantFare }}</td>
                    <td>{{ result.Fares.InfantFee }}</td>
                    <td>{{ result.Fares.InfantTax }}</td>
                </tr>
                <tr>
                    <td colspan="13">
                        <table class="table table-bordered">
                            <tr>
                                <th colspan="2">Segments</th>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th></th>
                                            <th>Flight number</th>
                                            <th>Flight time</th>
                                            <th>Airplane code</th>
                                            <th>Arrival airport code</th>
                                            <th>Arrival city code</th>
                                            <th>Arrival date</th>
                                            <th>Arrival time</th>
                                            <th>Arrival timezone</th>
                                            <th>Arrival terminal</th>
                                            <th>Booking class</th>
                                            <th>Departure airport code</th>
                                            <th>Departure city code</th>
                                            <th>Departure date</th>
                                            <th>Departure time</th>
                                            <th>Departure timezone</th>
                                        </tr>
                                        {% for leg in result.Segments.Legs %}
                                        <tr>
                                            <td><img src="{{ leg.ValidatingAirlineURL }}"></td>
                                            <td>{{ leg.FlightNumber }}</td>
                                            <td>{{ leg.FlightTime }}</td>
                                            <td>{{ leg.AirplaneCode }}</td>
                                            <td>{{ leg.ArrivalAirportCode }}</td>
                                            <td>{{ leg.ArrivalCityCode }}</td>
                                            <td>{{ leg.ArrivalDate }}</td>
                                            <td>{{ leg.ArrivalTime }}</td>
                                            <td>{{ leg.ArrivalTimezone }}</td>
                                            <td>{{ leg.ArrivalTerminal }}</td>
                                            <td>{{ leg.BookingClass }}</td>
                                            <td>{{ leg.DepartureAirportCode }}</td>
                                            <td>{{ leg.DepartureCityCode }}</td>
                                            <td>{{ leg.DepartureDate }}</td>
                                            <td>{{ leg.DepartureTime }}</td>
                                            <td>{{ leg.DepartureTimezone }}</td>
                                        </tr>
                                        {% endfor %}
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
            {% endfor %}
        </div>
    </div>
</div> <!-- /container -->
{% javascripts
'@AppBundle/Resources/public/js/jquery-3.2.1.min.js'
'@AppBundle/Resources/public/jquery-ui/jquery-ui.min.js'
'@AppBundle/Resources/public/js/bootstrap.min.js'
'@AppBundle/Resources/public/js/result.js'
%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
</body>
</html>